# API Key Encryption (REQUIRED)
ENCRYPTION_MASTER_KEY=your_32_byte_fernet_encryption_key_here

# Subscription License Security (REQUIRED)
SUBSCRIPTION_SECRET_KEY=your_strong_subscription_secret_min_32_chars

# CAPTCHA Security (REQUIRED)
