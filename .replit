modules = ["nodejs-20", "web", "c-clang14", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask API Server"

[[workflows.workflow]]
name = "Flask API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python api_server.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
