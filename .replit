run = ["bash", "start.sh"]
modules = ["nodejs-20", "python-3.11", "postgresql-16"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Dev Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "VerzekBridge"

[[workflows.workflow]]
name = "Expo Dev Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd mobile_app/VerzekApp && rm -rf .expo && EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0 npx expo start --clear --port 8080 --tunnel"
waitForPort = 8080

[[workflows.workflow]]
name = "VerzekBridge"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python bridge.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8050
externalPort = 3000

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 40639
externalPort = 3001

[deployment]
deploymentTarget = "vm"
run = ["gunicorn", "--worker-class", "gevent", "--workers", "1", "--bind", "0.0.0.0:5000", "--timeout", "120", "--preload", "api_server:app"]
build = ["pip", "install", "-r", "requirements.txt"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "libev", "libiconv", "libxcrypt", "nano", "opensshWithKerberos", "openssl", "pkg-config", "rustc"]
