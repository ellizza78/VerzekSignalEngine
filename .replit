run = ["bash", "start.sh"]
modules = ["nodejs-20", "python-3.11"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "VerzekAutoTrader"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Dev Server"

[[workflows.workflow]]
name = "VerzekAutoTrader"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_all_bots.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Expo Dev Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd mobile_app/VerzekApp && EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0 npx expo start --port 8080 --tunnel"
waitForPort = 8080

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 8081
externalPort = 8081

[[ports]]
localPort = 8082
externalPort = 3001

[[ports]]
localPort = 19000
externalPort = 3002

[[ports]]
localPort = 19001
externalPort = 3000

[[ports]]
localPort = 45361
externalPort = 3003

[deployment]
deploymentTarget = "vm"
run = ["gunicorn", "--worker-class", "gevent", "--workers", "2", "--bind", "0.0.0.0:5000", "--timeout", "120", "--preload", "api_server:app"]
build = ["pip", "install", "-r", "requirements.txt"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "libev", "libiconv", "libxcrypt", "nano", "openssl", "pkg-config", "rustc"]
