run = ["bash", "start.sh"]
modules = ["nodejs-20", "python-3.11", "postgresql-16"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Dev Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend API Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Auto-Trader Worker"

[[workflows.workflow]]
name = "Expo Dev Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd mobile_app/VerzekApp && rm -rf .expo && EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0 npx expo start --clear --port 8080 --tunnel --go"
waitForPort = 8080

[[workflows.workflow]]
name = "Backend API Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && PORT=8000 python3 api_server.py"
waitForPort = 8000

[[workflows.workflow]]
name = "Auto-Trader Worker"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python3 worker.py"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8080
externalPort = 80

[[ports]]
localPort = 8081
externalPort = 8081

[[ports]]
localPort = 35857
externalPort = 3002

[[ports]]
localPort = 40249
externalPort = 3000

[[ports]]
localPort = 42079
externalPort = 3001

[deployment]
deploymentTarget = "vm"
run = ["gunicorn", "--worker-class", "gevent", "--workers", "1", "--bind", "0.0.0.0:5000", "--timeout", "120", "--preload", "api_server:app"]
build = ["pip", "install", "-r", "requirements.txt"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "libev", "libiconv", "libxcrypt", "nano", "opensshWithKerberos", "openssl", "pkg-config", "rustc"]
