# Log Rotation for Verzek AutoTrader
# Place this file in /etc/logrotate.d/verzek

/root/api_server/logs/*.log {
    daily
    rotate 14
    compress
    delaycompress
    missingok
    notifempty
    create 0640 root root
    sharedscripts
    postrotate
        systemctl reload verzek-api.service > /dev/null 2>&1 || true
    endscript
}

/var/log/nginx/verzekinnovative*.log {
    daily
    rotate 14
    compress
    delaycompress
    missingok
    notifempty
    create 0640 www-data adm
    sharedscripts
    postrotate
        systemctl reload nginx > /dev/null 2>&1 || true
    endscript
}
