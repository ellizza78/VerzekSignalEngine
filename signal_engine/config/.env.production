# VerzekSignalEngine Production Environment
# Auto-loaded on Vultr deployment

# Backend API Configuration
BACKEND_API_URL=https://api.verzekinnovative.com
API_TIMEOUT=30

# Authentication (loaded from Replit Secrets on Vultr)
HOUSE_ENGINE_TOKEN=${HOUSE_ENGINE_TOKEN}
TELEGRAM_BOT_TOKEN=${TELEGRAM_BOT_TOKEN}
TELEGRAM_VIP_CHAT_ID=${TELEGRAM_VIP_CHAT_ID}
TELEGRAM_TRIAL_CHAT_ID=${TELEGRAM_TRIAL_CHAT_ID}

# Bot Configuration
ENABLE_SCALPING_BOT=true
ENABLE_TREND_BOT=true
ENABLE_QFL_BOT=true
ENABLE_AI_BOT=true

# Trading Symbols (comma-separated, no spaces)
TRADING_SYMBOLS=BTCUSDT,ETHUSDT,BNBUSDT,SOLUSDT,XRPUSDT,ADAUSDT,DOGEUSDT,MATICUSDT,DOTUSDT,LINKUSDT

# Bot Intervals (in seconds)
SCALPING_INTERVAL=15
TREND_INTERVAL=300
QFL_INTERVAL=20
AI_INTERVAL=30

# Risk Management
MAX_SIGNALS_PER_HOUR=20
MIN_CONFIDENCE_THRESHOLD=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/root/signal_engine/logs/signal_engine.log
ERROR_LOG_FILE=/root/signal_engine/logs/errors.log

# Performance
ENABLE_UVLOOP=true
PARALLEL_EXECUTION=true

# Health Monitoring
HEALTH_CHECK_INTERVAL=60
ENABLE_TELEGRAM_ALERTS=true
ADMIN_CHAT_ID=${ADMIN_CHAT_ID}
